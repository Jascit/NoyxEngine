{
  "version": 3,

  "configurePresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Windows/x64-Debug",
      "installDir": "${sourceDir}/out/install/Windows/x64-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Windows/x64-Release",
      "installDir": "${sourceDir}/out/install/Windows/x64-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Linux/x64-Debug",
      "installDir": "${sourceDir}/out/install/Linux/x64-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Linux/x64-Release",
      "installDir": "${sourceDir}/out/install/Linux/x64-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "macos-arm64-release",
      "displayName": "macOS arm64 Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/macOS/arm64-Release",
      "installDir": "${sourceDir}/out/install/macOS/arm64-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "windows-debug",
      "configurePreset": "windows-x64-debug"
    },
    {
      "name": "windows-release",
      "configurePreset": "windows-x64-release"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-x64-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-x64-release"
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-arm64-release"
    }
  ]
}
